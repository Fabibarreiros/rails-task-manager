<h1><%= @task.title %> </h1>

<p><%= @task.details %></p>
<input id="completed" type="checkbox" <%= @task.completed ? "checked" : "" %>>
<label for="completed"><%= @task.completed ? "This task is done" : "This task is not done yet" %></label>

<p>
  <%= link_to 'Back to list', tasks_path %>
</p>

<p>
  <%= link_to 'Edit Task', edit_task_path %>
</p>

<p>
  <%= link_to 'Remove this Task', task_path(@task), method: :delete, data: { confirm: 'Are you Sure you want to delete?' } %>
</p>
